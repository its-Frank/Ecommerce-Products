<div class="bg-gradient-to-r from-primary to-secondary py-16">
  <div class="max-w-7xl mx-auto px-4 text-center">
    <h1 class="text-5xl font-bold text-white mb-4">Recommended for You</h1>
    <p class="text-xl text-gray-200">
      Based on your <%= booking.skin_type %> skin type
    </p>
  </div>
</div>

<section class="py-16">
  <div class="max-w-7xl mx-auto px-4">
    <!-- Booking Summary -->
    <div class="bg-white rounded-lg shadow-lg p-8 mb-12">
      <h2 class="text-2xl font-bold text-primary mb-4">
        Your Booking Confirmed!
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h3 class="font-semibold text-gray-700 mb-2">Service Details:</h3>
          <p class="text-gray-600"><%= booking.service_name %></p>
          <p class="text-gray-600">
            Date: <%= new Date(booking.appointment_date).toLocaleDateString() %>
          </p>
          <p class="text-gray-600">Time: <%= booking.appointment_time %></p>
        </div>
        <div>
          <h3 class="font-semibold text-gray-700 mb-2">Skin Type:</h3>
          <span
            class="inline-block bg-accent text-primary px-3 py-1 rounded-full text-sm font-semibold capitalize"
          >
            <%= booking.skin_type %>
          </span>
        </div>
      </div>
    </div>

    <!-- Recommendations -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-primary mb-8 text-center">
        Recommended Products for <%= booking.skin_type.charAt(0).toUpperCase() +
        booking.skin_type.slice(1) %> Skin
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <% recommendations.forEach(product => { %>
        <div
          class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition"
        >
          <img
            src="/images/placeholder-product.jpg"
            alt="<%= product.name %>"
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-semibold text-primary mb-2">
              <%= product.name %>
            </h3>
            <p class="text-gray-600 mb-4"><%= product.description %></p>
            <div class="flex justify-between items-center mb-4">
              <span class="text-2xl font-bold text-secondary"
                >KSH <%= product.price.toLocaleString() %></span
              >
              <span
                class="text-sm bg-green-100 text-green-800 px-2 py-1 rounded"
                >Recommended</span
              >
            </div>
            <button
              class="w-full bg-accent text-primary px-4 py-2 rounded hover:bg-opacity-80 transition font-semibold"
            >
              Add to Wishlist
            </button>
          </div>
        </div>
        <% }); %>
      </div>
    </div>

    <!-- Skin Care Tips -->
    <div class="bg-gray-50 rounded-lg p-8">
      <h3 class="text-2xl font-bold text-primary mb-6 text-center">
        Tips for <%= booking.skin_type.charAt(0).toUpperCase() +
        booking.skin_type.slice(1) %> Skin
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <% if (booking.skin_type === 'oily') { %>
        <div class="flex items-start">
          <i class="fas fa-check-circle text-green-500 mr-3 mt-1"></i>
          <div>
            <h4 class="font-semibold text-gray-700">Use Oil-Free Products</h4>
            <p class="text-gray-600 text-sm">
              Choose non-comedogenic, oil-free foundations and moisturizers
            </p>
          </div>
        </div>
        <div class="flex items-start">
          <i class="fas fa-check-circle text-green-500 mr-3 mt-1"></i>
          <div>
            <h4 class="font-semibold text-gray-700">Blot Throughout the Day</h4>
            <p class="text-gray-600 text-sm">
              Use blotting papers to control shine without disturbing makeup
            </p>
          </div>
        </div>
        <% } else if (booking.skin_type === 'dry') { %>
        <div class="flex items-start">
          <i class="fas fa-check-circle text-green-500 mr-3 mt-1"></i>
          <div>
            <h4 class="font-semibold text-gray-700">Hydrate First</h4>
            <p class="text-gray-600 text-sm">
              Always use a hydrating primer and moisturizer before makeup
            </p>
          </div>
        </div>
        <div class="flex items-start">
          <i class="fas fa-check-circle text-green-500 mr-3 mt-1"></i>
          <div>
            <h4 class="font-semibold text-gray-700">Avoid Powder</h4>
            <p class="text-gray-600 text-sm">
              Use cream-based products instead of powder formulations
            </p>
          </div>
        </div>
        <% } else if (booking.skin_type === 'sensitive') { %>
        <div class="flex items-start">
          <i class="fas fa-check-circle text-green-500 mr-3 mt-1"></i>
          <div>
            <h4 class="font-semibold text-gray-700">Patch Test First</h4>
            <p class="text-gray-600 text-sm">
              Always test new products on a small area before full application
            </p>
          </div>
        </div>
        <div class="flex items-start">
          <i class="fas fa-check-circle text-green-500 mr-3 mt-1"></i>
          <div>
            <h4 class="font-semibold text-gray-700">Choose Gentle Formulas</h4>
            <p class="text-gray-600 text-sm">
              Look for hypoallergenic, fragrance-free products
            </p>
          </div>
        </div>
        <% } else { %>
        <div class="flex items-start">
          <i class="fas fa-check-circle text-green-500 mr-3 mt-1"></i>
          <div>
            <h4 class="font-semibold text-gray-700">Maintain Balance</h4>
            <p class="text-gray-600 text-sm">
              Use different products for T-zone and cheek areas
            </p>
          </div>
        </div>
        <div class="flex items-start">
          <i class="fas fa-check-circle text-green-500 mr-3 mt-1"></i>
          <div>
            <h4 class="font-semibold text-gray-700">Regular Cleansing</h4>
            <p class="text-gray-600 text-sm">
              Cleanse twice daily with a gentle, balanced cleanser
            </p>
          </div>
        </div>
        <% } %>
      </div>
    </div>

    <div class="text-center mt-12">
      <a
        href="/"
        class="bg-primary text-white px-8 py-4 rounded-lg font-semibold hover:bg-opacity-90 transition text-lg mr-4"
      >
        Back to Home
      </a>
      <a
        href="/shop"
        class="bg-accent text-primary px-8 py-4 rounded-lg font-semibold hover:bg-opacity-80 transition text-lg"
      >
        Shop Products
      </a>
    </div>
  </div>
</section>
