<div class="bg-gradient-to-r from-primary to-secondary py-16">
  <div class="max-w-7xl mx-auto px-4 text-center">
    <h1 class="text-5xl font-bold text-white mb-4">Payment</h1>
    <p class="text-xl text-gray-200">
      Complete your <%= type === 'service' ? 'appointment booking' : 'purchase'
      %>
    </p>
  </div>
</div>

<section class="py-16">
  <div class="max-w-4xl mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Payment Form -->
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-semibold text-primary mb-6">M-Pesa Payment</h2>
        <form action="/process-payment" method="POST" class="space-y-6">
          <input type="hidden" name="type" value="<%= type %>" />
          <% if (type === 'service') { %>
          <input type="hidden" name="booking_id" value="<%= item.id %>" />
          <% } %>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2"
              >M-Pesa Phone Number</label
            >
            <input
              type="tel"
              name="phone"
              required
              placeholder="254700000000"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-transparent"
            />
            <p class="text-sm text-gray-500 mt-1">
              Enter your M-Pesa registered phone number
            </p>
          </div>

          <div class="bg-green-50 border border-green-200 rounded-lg p-4">
            <div class="flex items-center">
              <i class="fas fa-mobile-alt text-green-600 text-2xl mr-3"></i>
              <div>
                <h3 class="font-semibold text-green-800">
                  M-Pesa Payment Process
                </h3>
                <p class="text-sm text-green-600">
                  You will receive an M-Pesa prompt on your phone to complete
                  the payment
                </p>
              </div>
            </div>
          </div>

          <button
            type="submit"
            class="w-full bg-green-600 text-white px-6 py-4 rounded-lg font-semibold hover:bg-green-700 transition text-lg"
          >
            <i class="fas fa-mobile-alt mr-2"></i>
            Pay with M-Pesa
          </button>
        </form>
      </div>

      <!-- Order Summary -->
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-semibold text-primary mb-6">Order Summary</h2>

        <% if (type === 'service') { %>
        <div class="space-y-4">
          <div class="flex justify-between items-center pb-4 border-b">
            <div>
              <h3 class="font-semibold text-lg"><%= item.service_name %></h3>
              <p class="text-gray-600 text-sm">
                Date: <%= new Date(item.appointment_date).toLocaleDateString()
                %>
              </p>
              <p class="text-gray-600 text-sm">
                Time: <%= item.appointment_time %>
              </p>
              <p class="text-gray-600 text-sm">
                Skin Type: <%= item.skin_type %>
              </p>
            </div>
            <span class="text-2xl font-bold text-secondary">
              KSH<%= (Number(item.service_price) || 0).toLocaleString() %>
            </span>
          </div>
          <div class="flex justify-between text-xl font-bold text-primary">
            <span>Total Amount:</span>
            <span
              >KSH<%= (Number(item.service_price) || 0).toLocaleString()
              %></span
            >
          </div>
        </div>
        <% } else { %>
        <div class="space-y-2">
          <% items.forEach(item => { %>
          <div class="flex justify-between items-center pb-1 border-b">
            <div>
              <h3 class="font-semibold text-base"><%= item.name %></h3>
              <p class="text-gray-600 text-sm">
                Qty: <%= item.quantity %> × KSH<%= (Number(item.price) ||
                0).toFixed(2) %>
              </p>
            </div>
            <span class="font-semibold text-base">
              KSH<%= ((Number(item.price) || 0) * (Number(item.quantity) ||
              0)).toFixed(2) %>
            </span>
          </div>
          <% }); %>
          <div class="flex justify-between text-xl font-bold text-primary pt-4">
            <span>Total Amount:</span>
            <span>KSH<%= (Number(total) || 0).toFixed(2) %></span>
          </div>
        </div>
        <% } %>

        <div class="mt-8 p-4 bg-gray-50 rounded-lg">
          <h4 class="font-semibold text-gray-700 mb-2">Payment Information</h4>
          <ul class="text-sm text-gray-600 space-y-1">
            <li>• Secure M-Pesa payment processing</li>
            <li>• You will receive a payment confirmation</li>
            <li>• Receipt will be generated after successful payment</li>
            <% if (type === 'service') { %>
            <li>• Booking confirmation will be sent via email</li>
            <% } else { %>
            <li>• Order will be processed immediately</li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
