<!-- Featured Products -->
<section class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-primary mb-4">Featured Products</h2>
      <p class="text-gray-600 text-lg max-w-2xl mx-auto">
        Premium makeup products to enhance your natural beauty
      </p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% products.forEach(product => { %>
      <div
        class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition"
      >
        <img
          src="<%= product.image %>"
          alt="<%= product.name %>"
          class="w-full h-48 object-cover"
        />
        <div class="p-6">
          <h3 class="text-xl font-semibold text-primary mb-2">
            <%= product.name %>
          </h3>
          <p class="text-gray-600 mb-4"><%= product.description %></p>
          <div class="flex justify-between items-center">
            <span class="text-2xl font-bold text-secondary"
              >KSH <%= product.price_ksh.toLocaleString() %></span
            >
            <span class="text-sm text-gray-500"
              ><%= product.stock %> in stock</span
            >
          </div>
          <% if (user) { %>
          <button
            onclick="addToCart(<%= product.id %>)"
            class="w-full mt-4 bg-accent text-primary px-4 py-2 rounded hover:bg-opacity-80 transition font-semibold"
          >
            Add to Cart
          </button>
          <% } else { %>
          <a
            href="/login"
            class="block w-full mt-4 bg-accent text-primary px-4 py-2 rounded hover:bg-opacity-80 transition font-semibold text-center"
          >
            Login to Purchase
          </a>
          <% } %>
        </div>
      </div>
      <% }); %>
    </div>
    <div class="text-center mt-12">
      <a
        href="/shop"
        class="bg-secondary text-white px-8 py-4 rounded-lg font-semibold hover:bg-opacity-90 transition text-lg"
      >
        Shop All Products
      </a>
    </div>
  </div>
</section>

