<div class="bg-gradient-to-r from-green-600 to-green-700 py-16">
  <div class="max-w-7xl mx-auto px-4 text-center">
    <div
      class="bg-white w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-6"
    >
      <i class="fas fa-check text-green-600 text-3xl"></i>
    </div>
    <h1 class="text-5xl font-bold text-white mb-4">Payment Successful!</h1>
    <p class="text-xl text-green-100">
      <% if (type === 'service') { %> Your appointment has been booked
      successfully <% } else { %> Your order has been placed successfully <% }
      %>
    </p>
  </div>
</div>

<section class="py-16">
  <div class="max-w-4xl mx-auto px-4">
    <div class="bg-white rounded-lg shadow-lg p-8">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-primary mb-2">Receipt</h2>
        <p class="text-gray-600">
          Transaction completed on <% var currentDate = new Date(); %><%=
          currentDate.toLocaleDateString() %>
        </p>
      </div>

      <div class="border-2 border-dashed border-gray-300 p-8 rounded-lg">
        <div class="flex justify-between items-center mb-6">
          <div>
            <h3 class="text-2xl font-bold text-primary">Lavender's Gloss</h3>
            <p class="text-gray-600">Professional Makeup Services</p>
          </div>
          <div class="text-right">
            <p class="text-sm text-gray-600">Receipt #</p>
            <p class="font-mono font-semibold">
              <% if (type === 'service') { %> <% if (typeof item !== 'undefined'
              && item && item.id) { %> SRV-<%= item.id %> <% } else { %> SRV-N/A
              <% } %> <% } else { %> <% if (typeof order_id !== 'undefined' &&
              order_id) { %> ORD-<%= order_id %> <% } else { %> ORD-N/A <% } %>
              <% } %>
            </p>
          </div>
        </div>

        <div class="border-t border-b border-gray-200 py-6 my-6">
          <% if (type === 'service') { %>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="font-semibold">Service:</span>
              <span>
                <% if (typeof item !== 'undefined' && item && item.service_name)
                { %> <%= item.service_name %> <% } else { %> N/A <% } %>
              </span>
            </div>
            <div class="flex justify-between">
              <span class="font-semibold">Booking ID:</span>
              <span>
                <% if (typeof item !== 'undefined' && item && item.id) { %> <%=
                item.id %> <% } else { %> N/A <% } %>
              </span>
            </div>
            <div class="flex justify-between">
              <span class="font-semibold">Status:</span>
              <span class="text-yellow-600 font-semibold"
                >Pending Approval</span
              >
            </div>
          </div>
          <% } else { %>
          <div class="space-y-3">
            <% if (typeof items !== 'undefined' && items && items.length > 0) {
            %> <% for (var i = 0; i < items.length; i++) { %> <% var currentItem
            = items[i]; %>
            <div class="flex justify-between">
              <span>
                <% if (currentItem.name) { %> <%= currentItem.name %> <% } else
                { %> Unknown Item <% } %> (<% if (currentItem.quantity) { %><%=
                Number(currentItem.quantity) %><% } else { %>0<% } %>x)
              </span>
              <span>
                KSH<% if (currentItem.price) { %><%=
                Number(currentItem.price).toFixed(2) %><% } else { %>0.00<% } %>
              </span>
            </div>
            <% } %> <% } else { %>
            <div class="text-center text-gray-500">No items found</div>
            <% } %>
          </div>
          <% } %>
        </div>

        <div class="flex justify-between text-xl font-bold text-primary">
          <span>Total Paid:</span>
          <span>
            KSH<% if (typeof total !== 'undefined' && total) { %><%=
            Number(total).toFixed(2) %><% } else { %>0.00<% } %>
          </span>
        </div>

        <div class="mt-8 p-4 bg-green-50 border border-green-200 rounded-lg">
          <div class="flex items-center">
            <i class="fas fa-check-circle text-green-600 text-xl mr-3"></i>
            <div>
              <h4 class="font-semibold text-green-800">Payment Confirmed</h4>
              <p class="text-sm text-green-600">
                <% if (type === 'service') { %> Your appointment booking is
                confirmed. You will receive an email confirmation once approved
                by our admin. <% } else { %> Your order has been processed and
                will be prepared for delivery. <% } %>
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="text-center mt-8 space-y-4">
        <button
          onclick="window.print()"
          class="bg-primary text-white px-6 py-3 rounded-lg font-semibold hover:bg-opacity-90 transition mr-4"
        >
          <i class="fas fa-print mr-2"></i>
          Print Receipt
        </button>
        <a
          href="/"
          class="bg-accent text-primary px-6 py-3 rounded-lg font-semibold hover:bg-opacity-80 transition"
        >
          Back to Home
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  @media print {
    nav,
    footer,
    .no-print {
      display: none !important;
    }
    body {
      background: white !important;
    }
  }
</style>
