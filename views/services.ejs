<div class="bg-gradient-to-r from-primary to-secondary py-16">
  <div class="max-w-7xl mx-auto px-4 text-center">
    <h1 class="text-5xl font-bold text-white mb-4">Our Services</h1>
    <p class="text-xl text-gray-200 max-w-3xl mx-auto">
      Professional makeup services for every occasion and style
    </p>
  </div>
</div>

<section class="py-16">
  <div class="max-w-7xl mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      <% services.forEach((service, index) => { %>
      <div
        class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition"
      >
        <img
          src="/images/service-<%= service.id %>.jpg"
          alt="<%= service.name %>"
          class="w-full h-64 object-cover"
        />
        <div class="p-8">
          <h3 class="text-2xl font-bold text-primary mb-4">
            <%= service.name %>
          </h3>
          <p class="text-gray-600 mb-6"><%= service.description %></p>
          <div class="flex justify-between items-center mb-6">
            <span class="text-3xl font-bold text-secondary">
              <% if (service.id === 1) { %>KSH 15,000<% } else if (service.id
              === 2) { %>KSH 8,000<% } else if (service.id === 3) { %>KSH
              12,000<% } else { %>KSH 20,000<% } %>
            </span>
          </div>
          <div class="space-y-3 mb-6">
            <div class="flex items-center text-gray-600">
              <i class="fas fa-clock mr-3 text-accent"></i>
              <span
                >Duration: <% if (service.id === 1) { %>3-4 hours<% } else if
                (service.id === 4) { %>4-5 hours<% } else { %>2-3 hours<% }
                %></span
              >
            </div>
            <div class="flex items-center text-gray-600">
              <i class="fas fa-user mr-3 text-accent"></i>
              <span>Professional makeup artist</span>
            </div>
            <div class="flex items-center text-gray-600">
              <i class="fas fa-palette mr-3 text-accent"></i>
              <span>Premium products included</span>
            </div>
          </div>
          <div class="flex space-x-3">
            <a
              href="/services/<% if (service.id === 1) { %>bridal-makeup<% } else if (service.id === 2) { %>soft-glam<% } else if (service.id === 3) { %>creative-makeup<% } else { %>sfx-makeup<% } %>"
              class="flex-1 bg-secondary text-white px-4 py-3 rounded-lg font-semibold hover:bg-opacity-80 transition text-center"
            >
              View Details
            </a>
            <% if (user) { %>
            <a
              href="/book/<%= service.id %>"
              class="flex-1 bg-accent text-primary px-4 py-3 rounded-lg font-semibold hover:bg-opacity-80 transition text-center"
            >
              Book Now
            </a>
            <% } else { %>
            <a
              href="/login"
              class="flex-1 bg-accent text-primary px-4 py-3 rounded-lg font-semibold hover:bg-opacity-80 transition text-center"
            >
              Login to Book
            </a>
            <% } %>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</section>

