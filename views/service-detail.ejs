<div class="bg-gradient-to-r from-primary to-secondary py-16">
  <div class="max-w-7xl mx-auto px-4 text-center">
    <h1 class="text-5xl font-bold text-white mb-4"><%= service.name %></h1>
    <p class="text-xl text-gray-200"><%= service.description %></p>
  </div>
</div>

<section class="py-16">
  <div class="max-w-6xl mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Service Image -->
      <div>
        <img
          src="/images/service-<%= service.id %>.jpg"
          alt="<%= service.name %>"
          class="w-full h-96 object-cover rounded-lg shadow-lg mb-6"
        />

        <!-- Gallery -->
        <div class="grid grid-cols-3 gap-4">
          <img
            src="/images/service-<%= service.id %>-1.jpg"
            alt="<%= service.name %> Example 1"
            class="w-full h-24 object-cover rounded-lg"
          />
          <img
            src="/images/service-<%= service.id %>-2.jpg"
            alt="<%= service.name %> Example 2"
            class="w-full h-24 object-cover rounded-lg"
          />
          <img
            src="/images/service-<%= service.id %>-3.jpg"
            alt="<%= service.name %> Example 3"
            class="w-full h-24 object-cover rounded-lg"
          />
        </div>
      </div>

      <!-- Service Details -->
      <div>
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h2 class="text-3xl font-bold text-primary mb-6">
            <%= service.name %>
          </h2>

          <div class="space-y-4 mb-8">
            <div class="flex items-center justify-between py-3 border-b">
              <span class="text-gray-600 font-medium">Price:</span>
              <span class="text-2xl font-bold text-secondary"
                >KSH <%= service.price.toLocaleString() %></span
              >
            </div>
            <div class="flex items-center justify-between py-3 border-b">
              <span class="text-gray-600 font-medium">Duration:</span>
              <span class="text-gray-800 font-semibold"
                ><%= service.duration %></span
              >
            </div>
            <div class="flex items-center justify-between py-3 border-b">
              <span class="text-gray-600 font-medium">Includes:</span>
              <span class="text-gray-800 font-semibold"
                >Consultation & Touch-ups</span
              >
            </div>
          </div>

          <!-- Service Features -->
          <div class="mb-8">
            <h3 class="text-xl font-semibold text-primary mb-4">
              What's Included:
            </h3>
            <ul class="space-y-3">
              <li class="flex items-center">
                <i class="fas fa-check text-green-500 mr-3"></i>
                <span class="text-gray-700">Professional consultation</span>
              </li>
              <li class="flex items-center">
                <i class="fas fa-check text-green-500 mr-3"></i>
                <span class="text-gray-700">Premium makeup products</span>
              </li>
              <li class="flex items-center">
                <i class="fas fa-check text-green-500 mr-3"></i>
                <span class="text-gray-700">Professional application</span>
              </li>
              <li class="flex items-center">
                <i class="fas fa-check text-green-500 mr-3"></i>
                <span class="text-gray-700"
                  >Touch-ups and final adjustments</span
                >
              </li>
              <% if (service.id === 1) { %>
              <li class="flex items-center">
                <i class="fas fa-check text-green-500 mr-3"></i>
                <span class="text-gray-700">Trial session available</span>
              </li>
              <li class="flex items-center">
                <i class="fas fa-check text-green-500 mr-3"></i>
                <span class="text-gray-700">Long-lasting formula</span>
              </li>
              <% } %> <% if (service.id === 4) { %>
              <li class="flex items-center">
                <i class="fas fa-check text-green-500 mr-3"></i>
                <span class="text-gray-700">Special effects materials</span>
              </li>
              <li class="flex items-center">
                <i class="fas fa-check text-green-500 mr-3"></i>
                <span class="text-gray-700">Character design consultation</span>
              </li>
              <% } %>
            </ul>
          </div>

          <!-- Booking Button -->
          <% if (user) { %>
          <a
            href="/book/<%= service.id %>"
            class="block w-full bg-accent text-primary px-6 py-4 rounded-lg font-semibold hover:bg-opacity-80 transition text-center text-lg mb-4"
          >
            Book <%= service.name %> - KSH <%= service.price.toLocaleString() %>
          </a>
          <% } else { %>
          <a
            href="/login"
            class="block w-full bg-accent text-primary px-6 py-4 rounded-lg font-semibold hover:bg-opacity-80 transition text-center text-lg mb-4"
          >
            Login to Book Appointment
          </a>
          <% } %>

          <a
            href="/services"
            class="block w-full text-center text-secondary hover:text-primary transition"
          >
            ‚Üê Back to All Services
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Service Process -->
<section class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-primary mb-4">Our Process</h2>
      <p class="text-gray-600 text-lg">
        How we ensure you get the perfect look
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div class="text-center">
        <div
          class="bg-accent w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4"
        >
          <span class="text-primary text-2xl font-bold">1</span>
        </div>
        <h3 class="text-lg font-semibold text-primary mb-2">Consultation</h3>
        <p class="text-gray-600 text-sm">
          We discuss your vision, skin type, and preferences
        </p>
      </div>
      <div class="text-center">
        <div
          class="bg-secondary w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4"
        >
          <span class="text-white text-2xl font-bold">2</span>
        </div>
        <h3 class="text-lg font-semibold text-primary mb-2">Preparation</h3>
        <p class="text-gray-600 text-sm">
          Skin prep and product selection for your skin type
        </p>
      </div>
      <div class="text-center">
        <div
          class="bg-primary w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4"
        >
          <span class="text-accent text-2xl font-bold">3</span>
        </div>
        <h3 class="text-lg font-semibold text-primary mb-2">Application</h3>
        <p class="text-gray-600 text-sm">
          Professional makeup application with premium products
        </p>
      </div>
      <div class="text-center">
        <div
          class="bg-accent w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4"
        >
          <span class="text-primary text-2xl font-bold">4</span>
        </div>
        <h3 class="text-lg font-semibold text-primary mb-2">Final Touch</h3>
        <p class="text-gray-600 text-sm">
          Final adjustments and setting for long-lasting results
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Related Services -->
<section class="py-16">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-primary mb-4">Other Services</h2>
      <p class="text-gray-600 text-lg">Explore our other makeup services</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <% [ { id: 1, name: 'Bridal Makeup', price: 150, slug: 'bridal-makeup' },
      { id: 2, name: 'Soft Glam Makeup', price: 80, slug: 'soft-glam' }, { id:
      3, name: 'Creative Makeup', price: 120, slug: 'creative-makeup' }, { id:
      4, name: 'SFX Makeup', price: 200, slug: 'sfx-makeup' } ].filter(s => s.id
      !== service.id).slice(0, 3).forEach(otherService => { %>
      <div
        class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition"
      >
        <img
          src="/images/service-<%= otherService.id %>.jpg"
          alt="<%= otherService.name %>"
          class="w-full h-48 object-cover"
        />
        <div class="p-6">
          <h3 class="text-xl font-semibold text-primary mb-2">
            <%= otherService.name %>
          </h3>
          <p class="text-2xl font-bold text-secondary mb-4">
            KSH <%= otherService.price.toLocaleString() %>
          </p>
          <a
            href="/services/<%= otherService.slug %>"
            class="block w-full bg-accent text-primary px-4 py-2 rounded hover:bg-opacity-80 transition font-semibold text-center"
          >
            View Details
          </a>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</section>
